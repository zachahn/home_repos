<%= layout do %>
  <%= form_for(@project) do |f| %>
    <div class="form__input">
      <%= f.label :name, class: "form__input__label" %>
      <%= f.text_field :name, class: "form__input__field" %>
    </div>

    <div class="form__input">
      <%= f.label :description, class: "form__input__label" %>
      <%= f.text_field :description, class: "form__input__field" %>
    </div>

    <div class="form__input">
      <%= f.radio_button :export, "true", checked: true %>
      <%= f.label :export, "Public", value: "true" %>
      <%= f.radio_button :export, "false" %>
      <%= f.label :export, "Private", value: "false" %>
    </div>

    <div class="form__input">
      <%= f.submit class: "button" %>
    </div>
  <% end %>
<% end %>
