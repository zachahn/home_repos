<%= layout do %>
  <%= form_for(@login, url: session_path) do |f| %>
    <div class="form__input">
      <%= f.label :email, class: "form__input__label" %>
      <%= f.text_field :email, class: "form__input__field" %>
    </div>

    <div class="form__input">
      <%= f.label :password, class: "form__input__label" %>
      <%= f.password_field :password, class: "form__input__field" %>
    </div>

    <div class="form__input">
      <%= f.submit "Login", class: "button" %>
    </div>
  <% end %>
<% end %>
